  if flag(mocks)
    Buildable:          True          
  else
    Buildable:          False

  main-is:              Subscriber.hs
  build-depends:        base ==4.6.*
                        , aeson
                        , bytestring
                        , containers
                        , http-conduit
                        , http-types
                        , mtl
                        , random
                        , scotty 
                        , text
                        , transformers
                        , safecopy
                        , stm
                        , uuid
                        , websockets         
                        , wai
                        , wai-extra
                        , wai-middleware-static
                        , wai-websockets < 2.1
                        , warp < 2.1
                           
  ghc-options:          -Wall -Werror
  default-language:     Haskell2010
  default-extensions:   OverloadedStrings
                        NoImplicitPrelude 

